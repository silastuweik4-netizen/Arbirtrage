# Base RPC endpoint (use Alchemy, Infura, or official Base RPC)
RPC_URL=https://mainnet.base.org

# Wallet private key (hex string starting with 0x)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Contract address after deployment
ARB_CONTRACT_ADDRESS=0x68168c8A65DA9Ed1cb2B674E2039C31a40BFC336

# Address to receive profits
PROFIT_RECIPIENT=0xYOUR_WALLET_ADDRESS

# Bot configuration
PRICE_DIFFERENCE_THRESHOLD=1.0
CHECK_INTERVAL_MS=10000
TRADE_SIZE=1
MIN_LIQUIDITY_USD=3000

# Health check server port
PORT=3000

# Optional: webhook for alerts (Discord/Slack)
WEBHOOK_URL=https://your-webhook-url
