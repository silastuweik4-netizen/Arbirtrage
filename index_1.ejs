<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dual-Chain Arb Hunter</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #0f172a; color: #f8fafc; font-family: 'Inter', sans-serif; }
        .card { background-color: #1e293b; border: none; border-radius: 12px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); }
        .table { color: #f8fafc; }
        .table-hover tbody tr:hover { background-color: #334155; color: white; }
        .badge-profit { background-color: #10b981; color: #064e3b; font-weight: 600; }
        .badge-chain-arb { background-color: #3b82f6; }
        .badge-chain-base { background-color: #0052ff; }
        .price-monitor { font-size: 0.85rem; color: #94a3b8; }
        .price-item { border-bottom: 1px solid #334155; padding: 4px 0; }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-1">Dual-Chain Arb Hunter</h1>
                <p class="text-muted mb-0">Monitoring Arbitrum & Base in Real-Time</p>
            </div>
            <div class="text-end">
                <span class="badge bg-secondary p-2">Last Scan: <%= data.timestamp %></span>
                <div class="mt-1"><small class="text-muted">Status: <%= data.status %> | Tokens: <%= data.tokenCount %></small></div>
            </div>
        </div>

        <!-- ARBITRAGE OPPORTUNITIES -->
        <div class="card p-4 mb-4">
            <h2 class="h5 mb-3">Live Opportunities</h2>
            <% if (data.opportunities && data.opportunities.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Chain</th>
                                <th>Token</th>
                                <th>Spread</th>
                                <th>Buy On</th>
                                <th>Sell On</th>
                                <th>Opt. Size</th>
                                <th>Est. Profit</th>
                                <th>Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.opportunities.forEach(opp => { %>
                                <tr>
                                    <td><span class="badge <%= opp.chain === 'Arbitrum' ? 'badge-chain-arb' : 'badge-chain-base' %>"><%= opp.chain %></span></td>
                                    <td><strong><%= opp.token %></strong></td>
                                    <td><span class="badge badge-profit">+<%= opp.spread %>%</span></td>
                                    <td><%= opp.buy.name %> ($<%= opp.buy.price.toFixed(4) %>)</td>
                                    <td><%= opp.sell.name %> ($<%= opp.sell.price.toFixed(4) %>)</td>
                                    <td>$<%= opp.optimalSize %></td>
                                    <td class="text-success"><strong>$<%= opp.expectedProfit %></strong></td>
                                    <td><small><%= opp.time %></small></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info bg-transparent border-secondary text-info">
                    No profitable opportunities found. The market is currently efficient.
                </div>
            <% } %>
        </div>

        <!-- LIVE PRICE MONITOR -->
        <div class="card p-4">
            <h2 class="h5 mb-3">Live Price Monitor <small class="text-muted">(Verifying Blockchain Connection)</small></h2>
            <div class="row">
                <% if (data.livePrices && data.livePrices.length > 0) { %>
                    <% data.livePrices.forEach(lp => { %>
                        <div class="col-md-4 price-item">
                            <div class="d-flex justify-content-between px-2">
                                <span class="price-monitor">[<%= lp.chain[0] %>] <%= lp.token %> / <%= lp.dex %></span>
                                <span class="text-white fw-bold">$<%= lp.price.toFixed(4) %></span>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-12 text-center text-muted">Fetching live prices from blockchain...</div>
                <% } %>
            </div>
        </div>

        <div class="mt-4 text-center text-muted">
            <small>Auto-refreshing every 60 seconds. Powered by Direct On-Chain RPC Queries.</small>
        </div>
    </div>

    <script>
        setTimeout(() => { location.reload(); }, 60000);
    </script>
</body>
</html>
