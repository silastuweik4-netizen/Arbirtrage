<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hidden Hunter v3</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #020617; color: #f8fafc; font-family: 'Inter', sans-serif; }
        .card { background-color: #0f172a; border: 1px solid #1e293b; border-radius: 16px; }
        .badge-tri { background-color: #8b5cf6; color: white; }
        .text-profit { color: #10b981; font-weight: bold; }
        .path-arrow { color: #64748b; margin: 0 5px; }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-1">Hidden Hunter <span class="badge bg-danger">v3</span></h1>
                <p class="text-muted mb-0">Triangular Arbitrage & New Listing Scanner</p>
            </div>
            <div class="text-end">
                <span class="badge bg-dark border border-secondary p-2">Last Scan: <%= data.timestamp %></span>
            </div>
        </div>

        <div class="card p-4 mb-4">
            <h2 class="h5 mb-3">Triangular Opportunities</h2>
            <% if (data.opportunities && data.opportunities.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th>Chain</th>
                                <th>Token</th>
                                <th>Path</th>
                                <th>DEX</th>
                                <th>Net Profit</th>
                                <th>Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.opportunities.forEach(opp => { %>
                                <tr>
                                    <td><span class="badge bg-primary"><%= opp.chain %></span></td>
                                    <td><strong><%= opp.token %></strong></td>
                                    <td><small class="text-muted"><%= opp.path %></small></td>
                                    <td><%= opp.dex %></td>
                                    <td><span class="text-profit">+<%= opp.spread %>%</span></td>
                                    <td><small><%= opp.time %></small></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-dark border-secondary text-muted">
                    Hunting for triangular loops... No hidden spreads detected yet.
                </div>
            <% } %>
        </div>

        <div class="card p-4">
            <h2 class="h5 mb-3">Live Price Feed <small class="text-muted">(Real-Time On-Chain)</small></h2>
            <div class="row">
                <% data.livePrices.forEach(lp => { %>
                    <div class="col-md-4 mb-2">
                        <div class="d-flex justify-content-between border-bottom border-secondary pb-1">
                            <small class="text-muted">[<%= lp.chain[0] %>] <%= lp.token %> / <%= lp.dex %></small>
                            <span class="fw-bold">$<%= lp.price.toFixed(6) %></span>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
    <script>setTimeout(() => { location.reload(); }, 45000);</script>
</body>
</html>
